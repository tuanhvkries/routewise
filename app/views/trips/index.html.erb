<div class="rw-container rw-my-trips">
  <h1 class="rw-my-trips-title">My trips</h1>

  <% if @trips.any? %>
    <div class="rw-trip-grid">
      <% @trips.each do |trip| %>
        <div class="rw-trip-card">
          <div class="rw-trip-image">
            <%= image_tag "trips/placeholder.jpg", alt: trip.city, class: "rw-trip-img" %>
          </div>

          <div class="rw-trip-body">
            <h3 class="rw-trip-destination">“<%= trip.city.presence || "Destination" %>”</h3>

            <p class="rw-trip-dates">
              <%= trip.start_date %> → <%= trip.end_date %>
            </p>
          </div>

          <div class="rw-trip-actions">
            <%= link_to "Details", trip_path(trip), class: "rw-trip-btn rw-trip-btn--ghost" %>

            <%= button_to "Delete",
                          trip_path(trip),
                          method: :delete,
                          form: { data: { turbo_confirm: "Are you sure?" } },
                          class: "rw-trip-btn rw-trip-btn--ghost rw-trip-btn--danger" %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="rw-my-trips-cta">
      <%= link_to "Plan a trip", new_trip_path, class: "rw-btn rw-btn--primary" %>
    </div>

  <% else %>
    <div class="rw-trip-empty-state">
      <p class="rw-trip-empty">No trips yet.</p>
      <%= link_to "Plan your first trip", new_trip_path, class: "rw-trip-btn rw-trip-btn--primary" %>
    </div>
  <% end %>
</div>
