<div class="pdf-header">
  <h1>Your trip to "<%= @trip.city %>"</h1>
  <p><%= @trip.start_date %> → <%= @trip.end_date %> &bull; <%= @trip.people %> people</p>
  <%= wicked_pdf_image_tag "logo.png", class: "pdf-logo" %>
</div>

<div class="pdf-card">
  <h2>Transportation</h2>
  <% @trip.transport_options.each do |t| %>
    <div class="pdf-transport-item">
      <span class="pdf-transport-mode"><%= t.mode.to_s.upcase %></span>
      <span class="pdf-transport-detail">
        &mdash; <%= t.duration_minutes %> min &mdash; €<%= t.price %> &mdash; <%= t.co2_kg %> kg CO₂
      </span>
    </div>
  <% end %>
</div>

<div class="pdf-card">
  <h2>Itinerary</h2>
  <% @trip.itinerary_days.order(:day_number).each do |day| %>
    <div class="pdf-day-header">Day <%= day.day_number %> &mdash; <%= day.date %></div>

    <% day.activities.order(:starts_at).each do |a| %>
      <div class="pdf-activity">
        <strong><%= a.starts_at&.strftime("%H:%M") %> - <%= a.title %></strong><br>
        <span class="pdf-activity-location"><%= a.location %></span><br>
        <span class="pdf-activity-details"><%= a.details %></span>
      </div>
    <% end %>
  <% end %>
</div>

<div class="pdf-footer">Generated by RouteWise</div>
